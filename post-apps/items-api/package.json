{
  "name": "items-api",
  "version": "1.0.0",
  "description": "Simple POST/GET API for Items",
  "main": "app.js",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "install:dev": "npm install",
    "install:ci": "npm ci",
    "compile": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "cd .. && sam validate",
    "build": "npm install && npm test && npm run compile && npm run validate && cd .. && sam build",
    "build:ci": "npm ci && npm test && npm run compile && npm run validate && cd .. && sam build",
    "deploy": "npm run build:ci && cd .. && sam deploy",
    "deploy:guided": "npm run build:ci && cd .. && sam deploy --guided",
    "local": "npm run build && cd .. && sam local start-api"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.699.0",
    "@aws-sdk/lib-dynamodb": "^3.699.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}